<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Twitter Bootstrap shopping cart</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap styles -->
    <link href="css/bootstrap.css" rel="stylesheet" />
    <!-- Customize styles -->
    <link href="style.css" rel="stylesheet" />
    <!-- font awesome styles -->
    <link href="font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="css/font-awesome-ie7.min.css" rel="stylesheet">
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

    <!-- Favicons -->
    <link rel="shortcut icon" href="ico/favicon.ico">
</head>

<body>

    {{> header}}

    <div class="container">

        <ul class="thumbnails">
            {{#if this.empty}}
            <li class="span4"></li>
            <li class="span4">
                <img src="https://deo.shopeemobile.com/shopee/shopee-pcmall-live-sg/assets/a60759ad1dabe909c46a817ecbf71878.png"
                    class="shopee-search-empty-result-section__icon">
                <h4 style="text-align: center; margin-top: -30px;">No product found</h4>
            </li>
            <li class="span4"></li>
            {{else}}
            {{#if lcIsAuthenticated}}
            {{#each this.products}}
            <li class="span3">
                <div class="thumbnail">
                    <a href="../product/detail?id={{id}}" class="overlay"></a>
                    <a style="margin-top: -30px;" class="zoomTool" href="../product/detail?id={{id}}"
                        title="add to cart"><span class="icon-search"></span> VIEW {{addToCart}}</a>
                    <a href="../product/detail?id={{id}}"><img src="../img/{{image}}" alt=""
                            style="width: 90%; padding-bottom: 30px;"></a>
                    <div class="caption cntr">
                        <p>{{name}}</p>
                        <p><strong> {{f_price}}</strong></p>
                        <h4><a class="shopBtn" href="../add-to-cart" title="add to cart"> Add to cart </a></h4>
                        <br class="clr">
                    </div>
                </div>
            </li>
            {{/each}}
            {{else}}
            {{#each this.products}}
            <li class="span3">
                <div class="thumbnail">
                    <a href="../product/detail?id={{id}}" class="overlay"></a>
                    <a style="margin-top: -30px;" class="zoomTool" href="../product/detail?id={{id}}"
                        title="add to cart"><span class="icon-search"></span> VIEW {{addToCart}}</a>
                    <a href="../product/detail?id={{id}}"><img src="../img/{{image}}" alt=""
                            style="width: 90%; padding-bottom: 30px;"></a>
                    <div class="caption cntr">
                        <p>{{name}}</p>
                        <p><strong> {{f_price}}</strong></p>
                        <h4><a class="shopBtn" href="../login" title="add to cart"> Add to cart </a></h4>
                        <br class="clr">
                    </div>
                </div>
            </li>
            {{/each}}
            {{/if}}
            {{/if}}
        </ul>
    </div>
    <div class="container">
        <ul class="thumbnails">
            <li class="span4"></li>
            <li class="span4" <!-- Start Pagination -->
                <div class="pagination span12">
                    {{#if this.isprev}}
                    <a href="home?page={{prev_page}}">&laquo;</a>
                    {{/if}}
                    {{#each this.page_items}}
                    <a href="home?page={{value}}" {{#if isActive}} class="active" {{/if}}>{{value}}</a>
                    {{/each}}
                    {{#if this.isnext}}
                    <a href="home?page={{next_page}}">&raquo;</a>
                    {{/if}}
                </div>
                <!-- End Pagination -->
            </li>
            <li class="span4"></li>
        </ul>
    </div>
    {{> footer}}

    <script src="../js/jquery.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/jquery.easing-1.3.min.js"></script>
    <script src="../js/jquery.scrollTo-1.4.3.1-min.js"></script>
    <script src="../js/shop.js"></script>
</body>

</html>